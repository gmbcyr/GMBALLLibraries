<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <gradient
                android:startColor="@color/datepic_transparent"
                android:endColor="@color/datepic_primary_light_100"
                android:type="linear"
                android:angle="0"
                android:centerColor="@color/datepic_primary_light_100" />
            <stroke
                android:width="0dp"
                android:color="@color/datepic_primary_dark" />
            <corners
                android:radius="0dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/datepic_primary_light_100"
                android:endColor="@color/datepic_primary_light_100"
                android:type="linear"
                android:angle="0"
                android:centerX="0"
                android:centerY="0.3" />
            <stroke
                android:width="0dp"
                android:color="@color/datepic_primary_dark" />
            <corners
                android:radius="0dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/datepic_transparent"
                android:endColor="@color/datepic_accent_transparent"
                android:type="linear"
                android:angle="180"
                android:centerX="0.55"
                android:centerY="0.3"
                android:centerColor="@color/datepic_primary_dark"/>
            <stroke
                android:width="0dp"
                android:color="@color/datepic_primary_dark" />
            <corners
                android:radius="0dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/datepic_transparent"
                android:endColor="@color/datepic_accent_transparent"
                android:type="linear"
                android:angle="0"
                android:centerX="0.55"
                android:centerY="0.3"
                android:centerColor="@color/datepic_primary_dark"/>
            <stroke
                android:width="0dp"
                android:color="@color/datepic_primary_dark" />
            <corners
                android:radius="0dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"/>
        </shape>
    </item>




</layer-list>