<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="@color/datepic_primary_light_100"
                android:endColor="@color/datepic_primary_less"
                android:type="linear"
                android:angle="90"
                android:centerColor="@color/datepic_primary_light_100" />
            <stroke
                android:width="1dp"
                android:color="@color/datepic_primary_dark" />
            <corners
                android:radius="0dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/datepic_primary_less"
                android:endColor="@color/datepic_primary_light_100"
                android:type="linear"
                android:angle="270"
                android:centerX="0"
                android:centerY="0.3" />
            <stroke
                android:width="1dp"
                android:color="@color/datepic_primary_dark" />
            <corners
                android:radius="0dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/datepic_primary_dark"
                android:endColor="@color/datepic_primary_light_100"
                android:type="linear"
                android:angle="90"
                android:centerX="0"
                android:centerY="0.7" />
            <stroke
                android:width="1dp"
                android:color="@color/datepic_primary_dark" />
            <corners
                android:radius="0dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"/>
        </shape>
    </item>


</layer-list>