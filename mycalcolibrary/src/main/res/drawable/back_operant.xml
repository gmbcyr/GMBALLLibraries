<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="@color/calc_blue_grey_900"
                android:endColor="@color/calc_blue_grey_200_transparent"
                android:type="linear"
                android:angle="90"
                android:centerColor="@color/calc_blue_grey_200_transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/calc_blue_grey_500" />
            <corners
                android:radius="5dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/calc_blue_grey_200_transparent"
                android:type="linear"
                android:angle="270"
                android:centerX="0"
                android:centerY="0.3" />
            <stroke
                android:width="1dp"
                android:color="@color/calc_blue_grey_900" />
            <corners
                android:radius="5dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/calc_primary_less"
                android:endColor="@color/calc_blue_grey_200_transparent"
                android:type="linear"
                android:angle="90"
                android:centerX="0"
                android:centerY="0.7" />
            <stroke
                android:width="1dp"
                android:color="@color/calc_blue_grey_500" />
            <corners
                android:radius="5dp"/>
        </shape>
    </item>


</layer-list>