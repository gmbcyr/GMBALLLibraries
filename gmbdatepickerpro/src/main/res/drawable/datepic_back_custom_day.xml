<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/datepic_grey_600" />
            <stroke
                android:width="1dp"
                android:color="@color/datepic_primary" />
            <corners
                android:radius="0dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/datepic_back_color1"
                android:endColor="@color/datepic_back_color2"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="@color/datepic_primary" />
            <corners
                android:radius="0dp" />

        </shape>
    </item>
</selector>